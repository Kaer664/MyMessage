<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lucky.competition.EnvironmentalIndicatorsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.lucky.competition.view.MyGroupView
            android:layout_margin="20dp"
            android:id="@+id/MGroupView1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </com.example.lucky.competition.view.MyGroupView>

        <com.example.lucky.competition.view.MyGroupView
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:id="@+id/MGroupView2"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </com.example.lucky.competition.view.MyGroupView>

        <com.example.lucky.competition.view.MyGroupView
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:id="@+id/MGroupView3"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </com.example.lucky.competition.view.MyGroupView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.lucky.competition.view.MyGroupView
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:id="@+id/MGroupView4"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </com.example.lucky.competition.view.MyGroupView>

        <com.example.lucky.competition.view.MyGroupView
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:id="@+id/MGroupView5"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </com.example.lucky.competition.view.MyGroupView>

        <com.example.lucky.competition.view.MyGroupView
            android:layout_margin="20dp"
            android:id="@+id/MGroupView6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </com.example.lucky.competition.view.MyGroupView>

    </LinearLayout>
</LinearLayout>
