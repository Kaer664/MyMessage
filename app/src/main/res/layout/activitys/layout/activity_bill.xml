<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lucky.competition.BillActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="自动报警："/>
       <Switch
           android:checked="true"
           android:layout_width="wrap_content"
           android:id="@+id/switch1"
           android:text="开"
           android:layout_height="wrap_content" />
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#CCC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="2dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:id="@+id/t1"
            android:layout_alignBaseline="@+id/et1"
            android:layout_height="wrap_content"
            android:text="温           度："/>
        <EditText
            android:layout_width="250dp"
            android:layout_toRightOf="@+id/t1"
            android:id="@+id/et1"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:id="@+id/t2"
            android:layout_alignBaseline="@+id/et2"
            android:layout_height="wrap_content"
            android:text="湿           度："/>
        <EditText
            android:layout_width="250dp"
            android:layout_toRightOf="@+id/t2"
            android:id="@+id/et2"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:id="@+id/t3"
            android:layout_alignBaseline="@+id/et3"
            android:layout_height="wrap_content"
            android:text="光           照："/>
        <EditText
            android:layout_width="250dp"
            android:layout_toRightOf="@+id/t3"
            android:id="@+id/et3"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:id="@+id/t4"
            android:layout_alignBaseline="@+id/et4"
            android:layout_height="wrap_content"
            android:text="CO2："/>
        <EditText
            android:layout_width="250dp"
            android:layout_toRightOf="@+id/t4"
            android:id="@+id/et4"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:id="@+id/t5"
            android:layout_alignBaseline="@+id/et5"
            android:layout_height="wrap_content"
            android:text="PM2.5："/>
        <EditText
            android:layout_width="250dp"
            android:layout_toRightOf="@+id/t5"
            android:id="@+id/et5"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:id="@+id/t6"
            android:layout_alignBaseline="@+id/et6"
            android:layout_height="wrap_content"
            android:text="道路状态："/>
        <EditText
            android:layout_width="250dp"
            android:layout_toRightOf="@+id/t6"
            android:id="@+id/et6"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/btnSave"
        android:text="保存"
        android:gravity="center"
        android:background="@drawable/button_round"
        android:layout_gravity="center"/>
</LinearLayout>
